{# src/Nurun/SystemBundle/Resources/view/Admin/userNotifications.html.twig #}

{% extends "NurunRhBundle::layout.html.twig" %}

{% block title %}
  {{ parent () }} - Modifier les notifications
{% endblock %}

{% block rh_body %}
  <div class="row zone-titre">
    <div class="col-sm-12">
      {% if app.user == user %}
        <h2 class="titre-page">Modifier ses notifications</h2>
      {% else %}
        <h2 class="titre-page">Modifier les notifications de<br>{{ user.username }}</h2>
        {% if is_granted('ROLE_ROOT') %}
          <a href="{{ path('nurun_admin_users') }}" class="btn btn-primary">
            Retour aux users
          </a>
        {% endif %}
      {% endif %}

      <div id="message">
        <!-- Pour pour Ã©crire des notifications -->
      </div>
    </div>
  </div>

  {% include("@NurunSystem/Admin/tableNotifications.html.twig") %}

{% endblock %}

{% block javascriptsPage %}
  {% include "::webjs/jquery.dataTables.html.twig" %}
  <script src="{{ asset('js/data-tables/dataTables.responsive.min.js') }}"></script>
  <script src="{{ asset('js/data-tables/dataTables.bootstrap.min.js') }}"></script>
  <script src="{{ asset('js/table.js') }}"></script>
{% endblock %}