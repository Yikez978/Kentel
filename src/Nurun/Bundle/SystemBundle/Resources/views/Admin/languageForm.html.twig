{# src/Nurun/SystemBundle/Resources/view/Admin/languageForm.html.twig #}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.language, 'Langue'|trans, {'label_attr': {'class': ''}}) }}

        {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.code, 'Code'|trans, {'label_attr': {'class': ''}}) }}

        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group" style="margin-top:36px;">
        {{ form_widget(form.save,  {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

{{ form_end(form) }}