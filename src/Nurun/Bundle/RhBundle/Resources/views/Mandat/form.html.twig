{# src/Nurun/RhBundle/Resources/views/Mandat/form.html.twig #}

{% block stylesheets %}
    <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/jquery-ui.theme.css') }}" rel="stylesheet" />
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascriptsPages %}
    <script src="{{ asset('js/jquery-1.11.2.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
{{ form_javascript(form) }}
{% endblock %}
<div class="well">
 {# {{ form(form) }}#}
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {# Génération du label. #}
      {{ form_label(form.titre, "Titre du mandat", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.titre) }}

      <div class="col-sm-4">
        {# Génération de l'input. #}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    {# Idem pour identifiant. #}
    <div class="form-group">
      {{ form_label(form.identifiant, "Identifiant du mandat", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.identifiant) }}
      <div class="col-sm-4">
        {{ form_widget(form.identifiant, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
      
    {# Idem pour identifiant. #}
    <div class="form-group">
      {{ form_label(form.secteur, "Secteur propriétaire du mandat", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.secteur) }}
      <div class="col-sm-4">
        {{ form_widget(form.secteur, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    {# Idem pour client. #}
    <div class="form-group">
      {{ form_label(form.client, "Nom du client", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.client) }}
      <div class="col-sm-4">
        {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
    {# Idem pour nbreHeures #}
    <div class="form-group">
      {{ form_label(form.nbreHeures, "Nombre d'heures travaillées", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.nbreHeures) }}
      <div class="col-sm-4">
        {{ form_widget(form.nbreHeures, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
      
    {# Idem pour mandataire. #}
    <div class="form-group">
      {{ form_label(form.mandataire, "Mandataire", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.mandataire) }}
      <div class="col-sm-4">
        {{ form_widget(form.mandataire, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
      
    {# Idem pour charge projet. #}
    <div class="form-group">
      {{ form_label(form.chargeprojet, "Chargé de projet", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.chargeprojet) }}
      <div class="col-sm-4">
        {{ form_widget(form.chargeprojet, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>  
        
    {# Idem pour Type de projet. #}
    <div class="form-group">
      {{ form_label(form.type, "Type de projet (F, FF, H)", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.type) }}
      <div class="col-sm-4">
        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.dateFin, "Date de fin du mandat", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.dateFin) }}
      <div class="col-sm-4">
        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

  {# commentaire #}
  <div class="form-group">
    {{ form_label(form.commentaire, "Commentaire", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
    {{ form_errors(form.commentaire) }}
    <div class="col-sm-4">
      {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'label': 'Sauvegarder', 'attr': {'class': 'btn btn-primary'}}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}

</div>