{# src/Nurun/RhBundle/Resources/views/ConseillerRdp/form.html.twig #}
{% block stylesheets %}
    <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/jquery-ui.theme.css') }}" rel="stylesheet" />
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-1.11.2.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
{{ form_javascript(form) }}
{% endblock %}

{# Cette vue n'hérite de personne, elle sera incluse par d'autres vues #}
<h3>Formulaire d'ajout de diplôme</h3>
{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash notice">
        {{ flashMessage }}
    </div>
{% endfor %}
{# On laisse vide la vue pour l'instant, on la comblera plus tard
   lorsqu'on saura afficher un formulaire. #}
<div class="well">
{# {{ form(form) }}#}
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{#    {% form_theme form 'NurunRhBundle:Form:form_nurun_type.html.twig' %}#}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

      
    <div class="form-group">
      {{ form_label(form.conseiller, "Conseiller", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.conseiller) }}
      <div class="col-sm-4">
        {{ form_widget(form.conseiller, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
        {{ form_label(form.diplome, "Diplôme", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.diplome) }}
        <div class="col-sm-4">
            {{ form_widget(form.diplome, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
      {{ form_label(form.date, "Date d'obtention", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.date) }}
      <div class="col-sm-4">
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div> 
      
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'label': 'Sauvegarder', 'attr': {'class': 'btn btn-primary'}}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>