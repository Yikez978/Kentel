{# src/Nurun/RhBundle/Resources/views/Mandat/delete.html.twig #}

{% extends "NurunRhBundle::layout.html.twig" %}

{% block title %}
  Supprimer une langue parlée - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Supprimer une langue parlée</h2>

  <p>
    Etes-vous certain de vouloir supprimer cette langue "{{ conseillerLanguage.language.language }}"
    pour {{conseillerLanguage.conseiller.prenom }} {{conseillerLanguage.conseiller.nom }} ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('nurun_conseiller_language_delete', {'id': conseillerLanguage.id}) }}" method="post">
    <a href="{{ path('nurun_conseiller_language_index', {'id': conseillerLanguage.conseiller.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}