{# src/Nurun/RhBundle/Resources/views/Conseiller/delete.html.twig #}

{% extends "NurunRhBundle::layout.html.twig" %}

{% block title %}
  Supprimer un conseiller - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Supprimer un conseiller</h2>

  <p>
    Etes-vous certain de vouloir supprimer le conseiller "{{ conseiller.prenom }} {{ conseiller.nom }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('nurun_conseiller_delete', {'id': conseiller.id}) }}" method="post">
    <a href="{{ path('nurun_conseiller_view', {'id': conseiller.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au conseiller
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}