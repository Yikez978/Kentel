{# src/Nurun/RhBundle/Resources/views/PrioriteBesoin/index.html.twig #}

{% extends "NurunRhBundle::layout.html.twig" %}

{% block title %}
  Liste des priorités de besoin - {{ parent() }}
{% endblock %}

{% block rh_body %}

  <h2>Liste des priorités de besoin</h2>
    <a href="{{ path('nurun_prioriteBesoin_add') }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>
        Ajouter une priorité
    </a>
  <table id="listPrioritesBesoins" class="display nowrap" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Priorité</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      <!--début de la boucle-->
  {% for priorite in priorites %}
    <tr>
        <td>{{ priorite.priorite }}</td>
        <td>
          <a href="{{ path('nurun_prioriteBesoin_edit', {'id': priorite.id}) }}" class="bt-table" title="Éditer" data-hover="tooltip"><span class="glyphicon glyphicon-edit"></span></a>
            <a href="{{ path('nurun_prioriteBesoin_delete', {'id': priorite.id}) }}" class="bt-table red-btn" title="Supprimer" data-hover="tooltip"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
      </tr>
      <!--fin de la boucle-->
  {% endfor %}

    </tbody>
  </table>

{% endblock %}